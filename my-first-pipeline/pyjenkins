pipeline {
    agent {
        docker {
            image 'python:3.9-slim'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building the Docker Image...'
                sh 'docker build -t hello-world-image .'
            }
        }

        stage('Run') {
            steps {
                echo 'Running the Python App...'
                sh 'docker run hello-world-image'
            }
        }
    }
}
